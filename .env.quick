# Quick Environment Variables for Immediate Deployment
# Copy to .env and update the critical values below

# ==============================
# CRITICAL - MUST UPDATE THESE
# ==============================
POSTGRES_PASSWORD=your_secure_database_password_here
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# ==============================
# DOMAIN & API - Update with your domain
# ==============================
CORS_ORIGINS=https://blytz.live,http://localhost:3000
VITE_API_URL=https://blytz.live/api/v1
FRONTEND_PORT=80
BACKEND_PORT=8080

# ==============================
# EMAIL - Configure for notifications
# ==============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
SMTP_FROM=noreply@blytz.live

# ==============================
# AI FEATURES
# ==============================
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================
# OPTIONAL - Can use defaults
# ==============================
DB_HOST=postgres
DB_PORT=5432
DB_USER=blytz_user
DB_NAME=blytz_marketplace
REDIS_HOST=redis
REDIS_PORT=6379
AWS_ENDPOINT=http://minio:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadminpassword
AWS_BUCKET=blytz-marketplace
AWS_REGION=us-east-1
MINIO_ROOT_USER=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
JWT_EXPIRES_IN=168h
ENVIRONMENT=production
VITE_APP_NAME=Blytz.live Marketplace
VITE_APP_VERSION=1.0.0