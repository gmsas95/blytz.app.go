# Production Environment Variables for Blytz.live Marketplace
# Copy this file to .env and fill in your actual values

# ==============================
# DATABASE CONFIGURATION
# ==============================
POSTGRES_DB=blytz_marketplace
POSTGRES_USER=blytz_user
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_PORT=5432

# ==============================
# REDIS CONFIGURATION
# ==============================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# ==============================
# MINIO S3 STORAGE CONFIGURATION
# ==============================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
AWS_BUCKET=blytz-marketplace
AWS_REGION=us-east-1

# ==============================
# JWT AUTHENTICATION
# ==============================
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=168h

# ==============================
# EMAIL CONFIGURATION
# ==============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
SMTP_FROM=noreply@blytz.live

# ==============================
# BACKEND CONFIGURATION
# ==============================
BACKEND_PORT=8080
CORS_ORIGINS=https://blytz.live,http://localhost:3000
ENVIRONMENT=production
GEMINI_API_KEY=your_gemini_ai_api_key_here

# ==============================
# FRONTEND CONFIGURATION
# ==============================
FRONTEND_PORT=80
VITE_API_URL=https://api.blytz.live/api/v1
VITE_APP_NAME=Blytz.live Marketplace
VITE_APP_VERSION=1.0.0
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# ==============================
# DOMAIN & SSL CONFIGURATION
# ==============================
DOMAIN=blytz.live
EMAIL=admin@blytz.live

# ==============================
# BACKUP CONFIGURATION
# ==============================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=blytz-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# ==============================
# MONITORING CONFIGURATION
# ==============================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password_here

# ==============================
# RATE LIMITING CONFIGURATION
# ==============================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# ==============================
# FILE UPLOAD CONFIGURATION
# ==============================
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_RATE_LIMIT_PER_MINUTE=10

# ==============================
# CACHE CONFIGURATION
# ==============================
CACHE_TTL_SECONDS=3600
SESSION_TIMEOUT_HOURS=24

# ==============================
# LOGGING CONFIGURATION
# ==============================
LOG_LEVEL=info
LOG_MAX_SIZE_MB=100
LOG_RETENTION_DAYS=30