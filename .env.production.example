# Blytz.live - Environment Configuration Template
# Copy this file to .env and fill in the values
# NEVER commit .env file to version control

# Application Environment
ENV=development

# PostgreSQL Database Configuration
POSTGRES_DB=blytz_marketplace
POSTGRES_USER=blytz_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# Database Connection Settings
DB_HOST=localhost
DB_PORT=5432
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# JWT Authentication
# Generate a secure JWT secret using: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_JWT_SECRET_HERE
JWT_EXPIRES_IN=1h

# Server Configuration
PORT=8080
LOG_LEVEL=info

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Configuration
API_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# LiveKit Configuration (Optional)
LIVEKIT_HOST=http://localhost:7880
LIVEKIT_API_KEY=CHANGE_ME_LIVEKIT_API_KEY
LIVEKIT_API_SECRET=CHANGE_ME_LIVEKIT_API_SECRET

# Stripe Configuration (Optional - for production)
STRIPE_SECRET_KEY=sk_test_CHANGE_ME_STRIPE_KEY
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME_PUBLISHABLE_KEY

# Google Gemini AI Configuration (Optional)
GEMINI_API_KEY=CHANGE_ME_GEMINI_API_KEY

# Frontend Environment Variables
VITE_API_URL=http://localhost:8080/api/v1
VITE_APP_NAME=Blytz.live
VITE_APP_URL=http://localhost:3000

# Production-Specific Settings
# Set these only when ENV=production
ALLOWED_ORIGINS=https://blytz.app,https://staging.blytz.app,https://www.blytz.app
